<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="@color/primary_100"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:padding="12dp">

        <!-- Meal Image -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/categoryCard"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/meal_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/plan1" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Meal Name -->
        <TextView
            android:id="@+id/tv_popular_meal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Egg Toast"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_meal_category_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fish"
            android:padding="5dp"
            android:maxLines="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/primary_500"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:cardCornerRadius="32dp"
                android:layout_margin="5dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="@color/primary_100"
                app:strokeWidth="1dp">

                <ImageView
                    android:id="@+id/meal_country_flag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/flag"/>
            </com.google.android.material.card.MaterialCardView>



            <TextView
                android:id="@+id/tv_popular_meal_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Egypt"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
